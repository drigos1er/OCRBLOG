{% extends "layout.html.twig" %}
{% block head %}
    <title>N'GORAN RODRIGUE-Developpeur Web</title>{% endblock %}
{% block content %}
<!-- Main Start -->
<main>







    <!-- Blog Start -->
    <section id="blog" class="section blog-section gray-bg">
        <div class="container">

            <div class="row justify-content-center m-60px-b md-m-30px-b sm-m-25px-b">
                <div class="col-12 col-md-10 col-lg-7">
                    <div class="section-title text-center">
                        <h2 class="font-alt">NOS ARTICLES</h2>
                        <p></p>
                    </div>
                </div>
            </div>

            <div class="row">
                <table id="checklist"  class="table table-striped table-bordered table-condensed">
                    <thead>
                    <tr>
                        <th></th>



                    </tr>
                    </thead>


                    <tbody>
                    {% for l in listpost %}
                        <tr>
                            <td>


                                <div class="blog-content">

                                    <h4><span class="theme-color" >{{ l.title }}</span></h4>
                                    <br>
                                    <p>
                                     {{ l.chapo }}
                                    </p> <br>
                                    <a href="index.php?key=detailspost&&id={{ l.id }}" class="more-btn" style="font-weight: bold; font-style: italic">Voir plus... <i class="ti-arrow-right"></i></a>

                                    <div style="text-align: right; color: orangered"> Dernière mise  à jour  {{ l.updatedate |date("d/m/Y")}} par {{ l.updateuser }}</div>
                                </div>
                            </td></tr>
                    {% endfor %}
                    </tbody>
                </table>



            </div>
        </div> <!-- container --><br><br><br><br><br><br><br><br>
    </section>


    <!-- Blog End -->





</main>
<!-- Main End -->
{% endblock content %}