{% extends "layout.html.twig" %}
{% block head %}
    <title>N'GORAN RODRIGUE-Developpeur Web</title>{% endblock %}
{% block content %}
<!-- Main Start -->
<main>







    <!-- Blog Start -->
    <section id="blog" class="section blog-section gray-bg">
        <div class="container">

          <br> <a class="m-btn m-btn-theme" href="index.php?key=blogpost"><i class="ti-arrow-left"></i>Retour à la liste de tous les articles </a>
            <p> {% if session.flash %}
            <div class="alert-success"> {{ session.flash }}</div>

            {% endif %}</p>
                <table id="checklist"  class="table table-striped table-bordered table-condensed">
                    <thead>
                    <tr>
                        <th></th>



                    </tr>
                    </thead>


                    <tbody>

                        <tr>
                            <td>


                                <div class="blog-content">
                                    <h4><span class="theme-color" >{{  detailspost.title  }}</span></h4>
                                    <br>


                                    <h4><a class="theme-color" href="#"></a></h4>
                                    <p>
                                        {{ detailspost.chapo }}
                                    </p>

                                    <p>
                                        {{ detailspost.content}}
                                    </p>
                                    <div style="text-align: right; color: orangered"> Dernière mise  à jour  {{ detailspost.updatedate|date("d/m/Y") }} par {{ detailspost.updateuser }}</div>
                                </div>

                            </td></tr>




                    </tbody>
                </table>
            <div> {% for c in detailscomment %}

                    <div style="background-color: white">   <p >
                        {{ c.content }}
                    </p><br>

                        <div style="text-align: right; color: #0b2e13">  Dernière Mise à jour   {{ c.updatedate|date("d/m/Y") }} par  {{ session.username}} {% if session.username==c.createuser %} <a  href="index.php?key=updatecomment&&postid={{  detailspost.id }}&&commentid={{ c.id }}">Modifier </a>  {% endif %} </div>
                    </div><!-- /post-meta -->
                    <hr style="color: red;">
                {% endfor %}      </div> <br>
            <div>  <form method="post" action="">


                    <div class="form-group">
                        <textarea name="content" placeholder="Ajouter un Commentaire" rows="3" class="form-control" required></textarea>
                    </div>

                    <div class="send">
                        <button class="m-btn m-btn-theme" type="submit"><i class="fa fa-envelope-o" aria-hidden="true"></i>Enregistrer</button>
                    </div>

                </form>

            </div>



            </div>
        </div> <!-- container --><br><br><br><br>
    </section>
    <!-- Blog End -->





</main>
<!-- Main End -->
{% endblock content %}